        <TextBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Margin="603,441,0,0" TextWrapping="Wrap" Text="1234" VerticalAlignment="Top" Height="64" Width="366" FontSize="48"/>
        <TextBlock HorizontalAlignment="Left" Margin="285,435,0,0" TextWrapping="Wrap" Text="Password:" VerticalAlignment="Top" Height="75" Width="267" FontSize="48"/>
        <Button x:Name="SignInButton" Content="Signing In" Margin="603,664,0,0" VerticalAlignment="Top" Height="87" Width="260" FontSize="48" Click="SignInButton_Click"/>
        <TextBlock x:Name="ErrorBlock" HorizontalAlignment="Left" Margin="403,294,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="566" Height="59" FontSize="20" RequestedTheme="Default"/>
        <ComboBox x:Name="ImComboBox" Margin="603,552,0,0" Width="299" Height="62" SelectedIndex="0"/>
        <TextBlock HorizontalAlignment="Left" Margin="328,550,0,0" TextWrapping="Wrap" Text="I am a:" VerticalAlignment="Top" Height="77" Width="182" FontSize="48"/>
        <Border BorderBrush="Black" BorderThickness="1" Margin="403,285,531,639" FocusVisualSecondaryBrush="#FF030000"/>


    </Grid>
</Page>
